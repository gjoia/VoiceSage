@model VoiceSage.Web.Models.GroupDto

<form asp-action="GroupDelete">
    <input asp-for="GroupId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Group</h1>

        <hr />
        <div class="row">
            
            <div class="col-2">
                <label asp-for="GroupName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="GroupName" disabled class="form-control" />
                
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" disabled class="form-control" />
                
            </div>
            <div class="col-5 offset-2">
                <a asp-action="GroupIndex" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
