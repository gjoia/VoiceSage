@model VoiceSage.Web.Models.GroupDto

<form asp-action="GroupEdit">
    <input asp-for="GroupId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Edit Contact</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="GroupName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <select class="col-10 pb-3">
                @foreach(var i in Model.ContactGroups)
            {
                <option >@i.GroupId</option>
            }
            </select>
            <div class="col-5 offset-2">
                <a asp-action="GroupIndex" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Edit" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
