@model VoiceSage.Web.Models.ContactDto

<form asp-action="ContactDelete">
    <input asp-for="ContactId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Contact</h1>

        <hr />
        <div class="row">
            
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
                
            </div>
            <div class="col-2">
                <label asp-for="Email" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Email" disabled class="form-control" />
                
            </div>
            <div class="col-2">
                <label asp-for="Number" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Number" disabled class="form-control" />
                
            </div>
            <div class="col-5 offset-2">
                <a asp-action="ContactIndex" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
